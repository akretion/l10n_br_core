<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cnab_preview_action" model="ir.actions.act_window">
        <field name="name">CNAB Preview</field>
        <field name="res_model">cnab.preview.wizard</field>
        <field name="binding_model_id" eval="False" />
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cnab_preview_wizard_form" />
        <field name="target">new</field>
        <field name="context">{'default_cnab_structure_id': active_id}</field>
    </record>

    <record model="ir.ui.view" id="cnab_structure_tree_view">
        <field name="model">l10n_br_cnab.structure</field>
        <field name="arch" type="xml">
            <tree edit="0">
                <field name="state" invisible="True"/>
                <field name="name" />
                <field name="cnab_format" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="cnab_structure_form_view">
        <field name="model">l10n_br_cnab.structure</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_review"
                        type="object"
                        string="Review"
                        class="oe_highlight"
                        states="draft"
                    />
                    <button
                        name="action_approve"
                        type="object"
                        string="Approve"
                        class="oe_highlight"
                        states="review"
                    />
                    <button
                        name="action_draft"
                        type="object"
                        string="Reset To Draft"
                        class="oe_highlight"
                        states="review,approved"
                    />
                    <field name="state" widget="statusbar" />
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(cnab_preview_action)d" icon="fa-search-plus" string="CNAB Preview" type="action" target="new" />
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="cnab_format" />
                            <field name="batch_ids" invisible="True" />
                            <field name="content_source_model_id" />
                        </group>
                    </group>

                    <separator name="line_ids" string="Lines" />
                    <field name="line_ids" mode='tree' widget='one2many' context="{'default_cnab_structure_id': id}">
                        <tree default_order="sequence">
                            <field name="state" invisible="True"/>
                            <field name="cnab_format" invisible="True" />
                            <field name="sequence"  widget="handle"/>
                            <field name="type" />
                            <field name="name" />
                            <field name="batch_id" attrs="{'column_invisible': [('parent.cnab_format', '!=', '240')]}"/>
                            <field name="cnab_structure_id" invisible="1" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_cnab_structure">
        <field name="name">CNAB Structures</field>
        <field name="view_id" ref="cnab_structure_tree_view" />
        <field name="res_model">l10n_br_cnab.structure</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
