<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="cnab_structure_payment_mode_form" model="ir.ui.view">
        <field name="name">cnab_structure_payment_mode_form</field>
        <field name="model">account.payment.mode</field>
        <field name="priority">99</field>
        <field
            name="inherit_id"
            ref="l10n_br_account_payment_order.l10n_br_account_payment_mode_form"
        />
        <field name="arch" type="xml">
            <field name="cnab_processor" position="after">
                <field name="cnab_structure_id"  attrs="{'invisible': [('cnab_processor', '!=', 'oca_processor')], 'required': [('cnab_processor', '=', 'oca_processor')]}"/>
            </field>
            <field name="auto_create_payment_order" position="after">
                <field name="account_payment_way_ids" widget="many2many_tags" />
            </field>
        </field>
    </record>
</odoo>
