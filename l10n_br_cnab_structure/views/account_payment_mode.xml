<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="cnab_structure_payment_mode_form" model="ir.ui.view">
        <field name="name">cnab_structure_payment_mode_form</field>
        <field name="model">account.payment.mode</field>
        <field name="priority">99</field>
        <field
            name="inherit_id"
            ref="l10n_br_account_payment_order.l10n_br_account_payment_mode_form"
        />
        <field name="arch" type="xml">
            <group name="l10n_br_account_payment_order-geral" position="after">
                <group name="cnab_structure" string="CNAB Structure">
                    <field name="cnab_structure_id" />
                </group>
            </group>
            <field name="release_form" position="replace">
                <field name="cnab_payment_way_id" />
            </field>
        </field>
    </record>
</odoo>
