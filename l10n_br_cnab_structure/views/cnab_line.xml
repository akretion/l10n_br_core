<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cnab_preview_action" model="ir.actions.act_window">
        <field name="name">CNAB Preview</field>
        <field name="res_model">cnab.preview.wizard</field>
        <field name="binding_model_id" eval="False" />
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cnab_preview_wizard_form" />
        <field name="target">new</field>
        <field name="context">{'default_cnab_structure_id': active_id}</field>
    </record>

    <record model="ir.ui.view" id="cnab_line_tree_view">
        <field name="model">l10n_br_cnab.line</field>
        <field name="arch" type="xml">
            <tree default_order='cnab_structure_id, sequence ASC' create="false">
                <field name="state" invisible="True" />
                <field name="cnab_format" invisible="True" />
                <field name="sequence" />
                <field name="name" />
                <field name="type" />
                <field name="batch_id" attrs="{'invisible': [('cnab_format', '!=', '240')]}" context="{'default_cnab_structure_id': cnab_structure_id}" />
                <field name="cnab_structure_id" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="cnab_line_form_view">
        <field name="model">l10n_br_cnab.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" name="%(cnab_preview_action)d" icon="fa-search-plus" string="CNAB Preview" type="action" target="new" />
                </div>
                <div class="oe_title">
                    <h1>
                        <field name="name" />
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="cnab_format" invisible="True" />
                        <field name="segment_name" attrs="{'invisible': [('type', '!=', 'segment')], 'required': [('type', '=', 'segment')]}" />
                        <field name="type" />
                        <field name="batch_id" attrs="{'invisible': [('cnab_format', '!=', '240')]}" context="{'default_cnab_structure_id': cnab_structure_id}" />
                        <field name="communication_flow" />
                        <field name="requerid" />
                    </group>
                    <group>
                        <field name="cnab_structure_id" invisible="True" />
                        <field name="sequence" />
                        <field name="content_source_model_id" />
                        <field name="resource_ref" />
                    </group>
                </group>
                <notebook>
                    <page name="field_page" string="Fields">
                        <field name="field_ids" mode='tree' widget='one2many' context="{'default_cnab_line_id': id}">
                            <tree editable="bottom">
                                <field name="state" invisible="True" />
                                <field name="name" />
                                <field name="meaning" />
                                <field name="start_pos" />
                                <field name="end_pos" />
                                <field name="type" />
                                <field name="content_source_model_id" invisible="True" />
                                <field name="default_value" />
                                <field name="notes" />
                                <field name="content_source_field" />
                                <field name="dynamic_content"/>
                                <field name="preview_field" attrs="{'column_invisible': [('parent.resource_ref', '=', False)]}" />
                                <field name="cnab_line_id" invisible="True" />
                                <button name="action_change_field" type="object" icon="fa-cogs" class="oe_highlight" />
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_cnab_line">
        <field name="name">CNAB Lines</field>
        <field name="res_model">l10n_br_cnab.line</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
