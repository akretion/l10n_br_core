<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="cnab_line_tree_view">
        <field name="model">l10n_br_cnab.line</field>
        <field name="arch" type="xml">
            <tree default_order='cnab_file_id, sequence ASC' create="false">
                <field name="state" invisible="True"/>
                <field name="cnab_format" invisible="True"/>
                <field name="sequence" />
                <field name="name" />
                <field name="type" />
                <field name="batch_id" attrs="{'invisible': [('cnab_format', '!=', '240')]}" context="{'default_cnab_file_id': cnab_file_id}"/>
                <field name="cnab_file_id" />
            </tree>
        </field>
    </record>



    <record model="ir.ui.view" id="cnab_line_form_view">
        <field name="model">l10n_br_cnab.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="cnab_format" invisible="True"/>
                            <field name="segment_name" attrs="{'invisible': [('type', '!=', 'segment')], 'required': [('type', '=', 'segment')]}" />
                            <field name="type" />
                        </group>
                        <group>
                            <field name="cnab_file_id" invisible="True"/>
                            <field name="sequence" />
                            <field name="batch_id" attrs="{'invisible': [('cnab_format', '!=', '240')]}" context="{'default_cnab_file_id': cnab_file_id}"/>
                        </group>
                    </group>

                    <separator name="field_ids_label" string="Fields" />
                    <field name="field_ids" mode='tree' widget='one2many' context="{'default_cnab_line_id': id}">
                        <tree editable="bottom">
                            <field name="state" invisible="True"/>
                            <field name="name" />
                            <field name="meaning" />
                            <field name="start_pos" />
                            <field name="end_pos" />
                            <field name="type" />
                            <field name="size" />
                            <field name="related_field_id" />
                            <field name="default_value" />
                            <field name="notes" />
                            <field name="cnab_line_id" invisible="True" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_cnab_line">
        <field name="name">CNAB Lines</field>
        <field name="res_model">l10n_br_cnab.line</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
